<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ice_creams">

    <ImageView
        android:id="@+id/biscuits"
        android:layout_width="173dp"
        android:layout_height="139dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/i2"
        android:onClick="gotoempty"/>

    <ImageView
        android:id="@+id/candy"
        android:layout_width="173dp"
        android:layout_height="139dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/biscuits"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/i3"
        android:onClick="gotoempty"/>

    <ImageView
        android:id="@+id/dessert"
        android:layout_width="173dp"
        android:layout_height="139dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/biscuits"
        app:srcCompat="@drawable/i4"
        android:onClick="gotoempty"/>

</android.support.constraint.ConstraintLayout>